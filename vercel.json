{
    "version": 2,
    "name": "ghost-trades",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "ghost-trades/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/health(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/ghost-trades/$1"
        }
    ]
}